@page
@model BrandonSimpleBlog.Areas.Admin.Pages.ManageBlogPostsModel
@{
    ViewData["Title"] = "Manage Blog Posts";
    ViewData["ActivePage"] = AdminNavPages.ManageBlogPosts;
}

<h4>@ViewData["Title"]</h4>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Author</th>
                    <th>Published</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var post in Model.PostResults.Posts)
                {
                <tr>
                    <td> @post.Title </td>
                    <td> @post.DateString </td>
                    <td> @post.AuthorName </td>
                    <td>
                        <div class="custom-control custom-checkbox mb-3">
                            <input type="checkbox" class="custom-control-input" id="customControlValidation1" required>
                            <label class="custom-control-label" for="customControlValidation1"></label>
                            <div class="invalid-feedback"></div>
                        </div>
                    </td>
                </tr>
                }               
            </tbody>
        </table>
    </div>
</div>